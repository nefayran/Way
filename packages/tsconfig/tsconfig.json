{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite", "axios"],
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "exclude": ["node_modules", "**/__tests__/*"]
}